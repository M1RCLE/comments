type Comment {
    id: ID!,
    userId: ID!,
    postId: ID!,
    body: String!,
    parentId: ID,
    indentation: Int!,
    relatedComments: [Comment!],
}

input CommentInput {
    userId: ID!,
    postId: ID!,
    body: String!,
}

input SubCommentInput {
    userId: ID!,
    postId: ID!,
    parentId: ID!,
    body: String!,
}